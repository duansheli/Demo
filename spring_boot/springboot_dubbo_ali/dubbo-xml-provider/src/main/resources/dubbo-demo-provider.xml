<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="demo-provider" />
    <dubbo:protocol name="dubbo" port="21005" />
    <dubbo:registry address="zookeeper://zkm:2181" />


    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.fluffy.service.EchoService" ref="demoService" version="1.0" />

    <!-- 和本地bean一样实现服务 -->
    <bean id="demoService" class="com.fluffy.serviceImpl.EchoServerImpl" />

</beans>